<!--pages/dish-list.wxml-->
<view class='page'>
  <view class='page__hd'>
    <view class='weui-panel__hd'>
      {{listName}}
    </view>
  </view>
  <view class='page__bd'>
    <view class='weui-panel__bd'>
      <navigator wx:for="{{dishArray}}" url="/pages/dish-list/dish-list?id={{item.id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
          <image class="weui-media-box__thumb" src="{{item.image}}" />
        </view>
        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
          <view class="weui-media-box__title">{{item.dishName}}</view>
          <view class="weui-media-box__desc">{{item.dishDetail}}</view>
        </view>
      </navigator>
    </view>
  </view>
</view>