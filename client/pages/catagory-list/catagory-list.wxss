/* pages/catagory-list/catagory-list.wxss */

page {
  width: 100%;
  height: 100%;
  margin-bottom: 10%;
}

.catagory_out {
  border: 0px;
}

.cataImage {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  border-radius: 10px;
}

.catagory {
  display: flex;
  flex-direction: row;
}

.catagory_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 30px;
  margin-left: 20px;
  margin-right: 15px;
}

.catagory_items {
  display: flex;
  flex-direction: row;
  /*justify-content: space-around;*/
  /* align-content: space-around; */
  width: 100%;
  height: 100%;
  flex-wrap: wrap;
}

.catagory_items__inner {
  padding: 0px;
}

.cataName {
  font-size: 15px;
}

.advertise {
  width: 100%;
  position: relative;
  top: 0px;
}

.slide-image {
  width: 100%;
}

.weui-panel__hd {
  padding: 14px 15px 10px;
  color: #999;
  font-size: 13px;
  position: relative;
}

.bottom-button {
  position: fixed;
  bottom: 0px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 10%;
}

.button__catagory {
  display: flex;
  background-color: #E09009;
  width: 50%;
  height: 100%;
  justify-content: center;
  align-items: center;
  color: white;
}

.button__favourite {
  display: flex;
  background-color: orange;
  width: 50%;
  height: 100%;
  justify-content: center;
  align-items: center;
  color: white;
}

.util-bottom {
  height: 10%;
}