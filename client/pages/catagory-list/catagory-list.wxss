/* pages/catagory-list/catagory-list.wxss */

page {
  width: 100%;
}

.cataImage {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  border-radius: 10px;
}

.catagory {
  display: flex;
  flex-direction: row;
}

.catagory_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 30px;
  margin-left: 20px;
  margin-right: 15px;
}

.catagory_items {
  display: flex;
  flex-direction: row;
  /*justify-content: space-around;*/
  align-content: space-around; 
  width: 100%;
  flex-wrap: wrap;
}

.catagory_items__inner {
  padding: 0px;
}

.cataName {
  font-size: 15px;
}

.advertise {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
}

.slide-image {
  width: 100%;
}